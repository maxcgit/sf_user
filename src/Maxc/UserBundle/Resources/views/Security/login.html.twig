{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div class="alert alert-danger" role="alert">
        {{ error.messageKey|trans }}
    </div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" role="form">
	
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
	<div class="form-group">
	    <label for="username">{{ 'security.login.username'|trans }}</label>
	    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Enter login"/>
	</div>
    <div class="form-group">
	    <label for="password">{{ 'security.login.password'|trans }}</label>
	    <input class="form-control" type="password" id="password" name="_password" required="required" placeholder="Password"/>
	</div>	
	<div class="checkbox">
    <label for="remember_me">
		    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
    </label>
	</div>
    <div class="form-group">
        <a href="{{ path('fos_user_resetting_request') }}">{{ 'form.reset_password'|trans }}</a>
    </div>
    <div class="form-group">
    <button type="submit" id="_submit" name="_submit" class="btn btn-default">{{ 'security.login.submit'|trans }}</button>
    {{ 'form.or'|trans }}
    <a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans }}</a>
    </div>
</form>
{% endblock fos_user_content %}
